{
  "templateName": "Event Planner",
  "category": "event-planning",
  "description": "Plan events with vendors, tasks, and budgets.",
  "tables": [
    {
      "name": "Events",
      "fields": [
        { "name": "Event Name", "type": "text" },
        { "name": "Date", "type": "date" },
        { "name": "Location", "type": "text" },
        { "name": "Owner", "type": "text" }
      ],
      "views": ["grid", "calendar"]
    },
    {
      "name": "Vendors",
      "fields": [
        { "name": "Vendor Name", "type": "text" },
        { "name": "Service", "type": "text" },
        { "name": "Contact", "type": "text" },
        { "name": "Budget", "type": "currency" }
      ],
      "views": ["grid"]
    },
    {
      "name": "Tasks",
      "fields": [
        { "name": "Task", "type": "text" },
        { "name": "Owner", "type": "text" },
        { "name": "Status", "type": "select", "options": ["Not Started", "In Progress", "Waiting", "Done"] },
        { "name": "Due Date", "type": "date" }
      ],
      "views": ["grid", "kanban", "calendar"]
    }
  ]
}
